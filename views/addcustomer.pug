doctype html 
html 
    head
        title Add customer 
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body 
        div.container
            h1 New customer
            form(action="/addcustomer", method="POST")
                div.mb-3 
                    label(for="title").form-label First Name:
                    input(type="text" name="firstname" id="firstname").form-control
                div.mb-3
                    label(for="director").form-label Last Name:
                    input(type="text", name="lastname" id="lastname").form-control
                div.mb-3
                    label(for="year").form-label E-Mail:
                    input(type="email", name="email" id="email").form-control
                div.mb-3
                    label(for="year").form-label Phone:
                    input(type="text", name="phone" id="phone").form-control
                div.mb-3
                    input(type="submit", value="Add").btn.btn-primary
